{
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"source.addMissingImports": true
	},
	"search.exclude": {
		"package-lock.json": true,
		"yarn.lock": true
	},
	"editor.formatOnSave": true,
	"css.validate": false,
	"typescript.tsdk": "./node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"cSpell.words": [
		"בתחומים",
		"הבאים",
		"הבוקר",
		"החודש",
		"היומית",
		"ובמיוחד",
		"והסבירו",
		"והתנדבותית",
		"וקריאה",
		"להבנה",
		"שמעניין",
		"brackethighlighter",
		"codemirror",
		"fontawesome",
		"Formik",
		"fortawesome",
		"githubassets",
		"hatkafa",
		"hookform",
		"Linkify",
		"matchbrackets",
		"octicon",
		"preinstall",
		"prettylights",
		"runmode",
		"scroller",
		"sublimelinter",
		"Utilman",
		"wmde"
	]
}
